<div class="modal fade setting-modal" id="front-setting-{{loginUser.id}}" tabindex="-1"
  aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content" style="height:300px">
      <div class="modal-header">
        <h5 class="modal-title" style="font-size:x-large">Hi, {{loginUser.name}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="btn-group-vertical setting-button-group mt-2">
          <form class="setting-button-form mt-3" action="/drinks/orders" method="GET">
            <button class="btn setting-button" type="submit">查看訂單</button>
          </form>
          <form class="setting-button-form mt-3">
            <button class="btn setting-button">結帳交班</button>
          </form>
          <form class="setting-button-form mt-3" action="/signout" method="POST">
            <button class="btn setting-button" type="submit">帳號登出</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>