{{> messages}}
<div class="row">
  <!--     訂單區 -->
  <div class="col-md-4 p-4">
    <h5 style="color:azure">{{user.Shift.name}}人員: {{user.name}}</h5>
    {{#each orders}}
    <a href="/drinks/orders/{{this.id}}" style="text-decoration:none">
      <div class="card my-3 consume-card">
        <div class="card-body pt-3 pr-3">
          <div class="card-text mb-1">消費數量: {{this.quantity}}</div>
          <div class="card-text">消費金額: {{this.total_price}}</div>
        </div>
        <div class="card-footer text-right py-2">
          <div class="card-text"><span>訂單時間:{{catchTime this.createdAt }}</span></div>
        </div>
      </div>
    </a>
    {{/each}}
    <form class="checkout-button" action="/drinks/checkout" method="POST">
      <div class="card orderTotalPrice mb-3">
        <label style="display:block" for="orderTotalPrice">總金額：
          <input type="text" class="orderTotalPriceValue" name="orderTotalPrice" size="4" value="{{orderTotalPrice}}"
            readonly>
        </label>
        <button class="btn btn-outline-light mb-3" id="checkoutButton" type="submit"
          style="min-width:120px;">結帳</button>
      </div>
    </form>
  </div>
